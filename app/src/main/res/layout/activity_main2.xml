<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        />
    <Button
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="8"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="9"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonWaru"
        />



    <Button
        android:id="@+id/buttonWaru"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="รท"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button5"
         />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="5"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="6"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/buttonKakeru"
        />



    <Button
        android:id="@+id/buttonKakeru"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="ร"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="2"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="3"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/buttonMin"/>



    <Button
        android:id="@+id/buttonMin"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="-"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        />




    <Button
        android:id="@+id/buttonAC"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="AC"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        />


    <Button
        android:id="@+id/button0"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/buttonAC"
        app:layout_constraintStart_toEndOf="@+id/buttonAC"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="="
        app:layout_constraintTop_toTopOf="@+id/buttonAC"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:text="+"
        app:layout_constraintTop_toTopOf="@+id/buttonAC"
        app:layout_constraintStart_toEndOf="@+id/buttonEqual"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>